{
  "name": "tools-monorepo",
  "version": "1.0.0",
  "description": "Collection of web-based tools and utilities",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "turbo run build && node scripts/generate-landing.js",
    "build:apps": "turbo run build",
    "build:landing": "node scripts/generate-landing.js",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "predeploy": "pnpm run build",
    "deploy": "gh-pages -d docs -t true",
    "music": "pnpm --filter @hudak/music-practice",
    "tuner": "pnpm --filter @hudak/instrument-tuner",
    "ui": "pnpm --filter @hudak/ui"
  },
  "keywords": [
    "tools",
    "web-apps",
    "utilities",
    "monorepo"
  ],
  "author": "Jonathan Hudak",
  "license": "ISC",
  "devDependencies": {
    "@qiwi/semantic-release-gh-pages-plugin": "^5.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/router-plugin": "^1.134.13",
    "@vitejs/plugin-react": "^4.3.4",
    "gh-pages": "^6.3.0",
    "semantic-release": "^24.2.9",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.6.0",
    "vite": "^6.4.1"
  }
}
